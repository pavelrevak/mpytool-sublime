[
    {
        "id": "tools",
        "children": [
            {
                "caption": "MicroPython",
                "children": [
                    {"caption": "New Project...", "command": "mpy_new_project"},
                    {"caption": "Project Settings", "command": "mpy_project_settings"},
                    {"caption": "-"},
                    {"caption": "Deploy to Device", "command": "mpy_deploy"},
                    {"caption": "Sync to Device", "command": "mpy_sync"},
                    {"caption": "-"},
                    {"caption": "Backup Device", "command": "mpy_backup"},
                    {"caption": "Restore Backup", "command": "mpy_restore"},
                    {"caption": "List Files", "command": "mpy_tree"},
                    {"caption": "Device Info", "command": "mpy_info"},
                    {"caption": "Erase Device", "command": "mpy_erase_device"},
                    {"caption": "-"},
                    {"caption": "Reset Device", "command": "mpy_reset"},
                    {"caption": "Reset and Monitor", "command": "mpy_reset", "args": {"monitor": true}},
                    {"caption": "Monitor", "command": "mpy_monitor"},
                    {"caption": "Open REPL", "command": "mpy_repl"},
                    {"caption": "-"},
                    {"caption": "Stop", "command": "mpy_stop"},
                    {"caption": "Select Project...", "command": "mpy_select_project"}
                ]
            }
        ]
    },
    {
        "id": "preferences",
        "children": [
            {
                "caption": "Package Settings",
                "mnemonic": "P",
                "id": "package-settings",
                "children": [
                    {
                        "caption": "mpytool",
                        "children": [
                            {
                                "caption": "Settings",
                                "command": "edit_settings",
                                "args": {
                                    "base_file": "${packages}/mpytool/mpytool.sublime-settings",
                                    "default": "{\n\t$0\n}\n"
                                }
                            }
                        ]
                    }
                ]
            }
        ]
    }
]
